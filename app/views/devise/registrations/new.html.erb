
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
<h2 class="text-center">Sign Up</h2>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-inputs"}%>
    <%= f.input :password, required: true, label: false, placeholder: "password", input_html: {class: "form-inputs"} %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "password confirmation", input_html: {class: "form-inputs"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
